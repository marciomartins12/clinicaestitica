    resultadosTemporarios = [];
    
    // Buscar resultados existentes do exame
    fetch(`/sistema/atendimento/exames/${currentPatientId}`)
        .then(response => response.json())
        .then(data => {
            console.log('Dados recebidos para carregamento:', data);
            if (data.success) {
                console.log('Procurando exame com ID:', exameId, 'nos dados:', data.data.map(e => ({id: e.id, tipo: e.tipo_exame, resultados: e.resultados})));
                const exame = data.data.find(e => e.id == exameId);
                console.log('Exame encontrado para carregamento:', exame);
                
                if (exame && exame.resultados && Array.isArray(exame.resultados)) {
                    console.log('Resultados encontrados:', exame.resultados);
                    // Converter resultados da nova estrutura para o formato temporário
                    resultadosTemporarios = exame.resultados.map(resultado => ({
                        chave: resultado.chave,
                        valor: resultado.valor,
                        unidade: resultado.unidade,
                        valor_referencia: resultado.valor_referencia,
                        observacoes: resultado.observacoes
