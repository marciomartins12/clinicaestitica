function getProcedimentosText(agendamento) {
    console.log('getProcedimentosText chamada para agendamento:', agendamento);
    let procedimentos = [];
    
    // Se tem produto direto, adicionar
    if (agendamento.produto && agendamento.produto.nome) {
        console.log('Produto direto encontrado:', agendamento.produto.nome);
        procedimentos.push(agendamento.produto.nome);
    }
    
    // Se tem itens, adicionar todos os produtos dos itens
    if (agendamento.itens && agendamento.itens.length > 0) {
        console.log('Itens encontrados:', agendamento.itens.length, agendamento.itens);
        agendamento.itens.forEach(item => {
            console.log('Processando item:', item);
            if (item.produto && item.produto.nome) {
                console.log('Produto do item encontrado:', item.produto.nome);
                // Evitar duplicação se o produto já foi adicionado
                if (!procedimentos.includes(item.produto.nome)) {
                    procedimentos.push(item.produto.nome);
                }
            }
        });
    } else {
        console.log('Nenhum item encontrado para agendamento:', agendamento.id);
    }
    
    // Se não encontrou nenhum procedimento, usar texto padrão
    if (procedimentos.length === 0) {
        return '<div class="nome">Procedimento</div>';
    }
    
    // Se tem apenas um procedimento
    if (procedimentos.length === 1) {
        return `<div class="nome">${procedimentos[0]}</div>`;
    }
    
    // Se tem múltiplos procedimentos
    const listaId = `procedimentos_${agendamento.id}_${Date.now()}`;
    return `
        <div class="nome">${procedimentos[0]}</div>
        <div class="procedimentos-extras" onclick="toggleProcedimentos('${listaId}')">
            + ${procedimentos.length - 1} procedimento(s)
        </div>
        <div id="${listaId}" class="procedimentos-lista" style="display: none;">
            ${procedimentos.map(proc => `<div class="procedimento-item">• ${proc}</div>`).join('')}
        </div>
    `;
}

