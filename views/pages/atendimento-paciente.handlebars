function calcularValorTotalAgendamento(agendamento) {
    console.log('Calculando valor para agendamento:', agendamento.id);
    
    // Se tem valor direto, usar ele
    if (agendamento.valor_total && agendamento.valor_total > 0) {
        console.log('Usando valor_total direto:', agendamento.valor_total);
        return parseFloat(agendamento.valor_total);
    }
    
    if (agendamento.valor_final && agendamento.valor_final > 0) {
        console.log('Usando valor_final direto:', agendamento.valor_final);
        return parseFloat(agendamento.valor_final);
    }
    
    if (agendamento.valor && agendamento.valor > 0) {
        console.log('Usando valor direto:', agendamento.valor);
        return parseFloat(agendamento.valor);
    }
    
    // Se não tem valor direto, calcular baseado nos itens
    if (agendamento.itens && agendamento.itens.length > 0) {
        console.log('Calculando valor baseado em itens:', agendamento.itens.length);
        let total = 0;
        
        agendamento.itens.forEach(item => {
            const valorItem = parseFloat(item.valor_total || 0);
            console.log(`Item ${item.id}: valor_total = ${valorItem}`);
            total += valorItem;
        });
        
        console.log('Valor total calculado dos itens:', total);
        return total;
    }
    
    // Se tem produto direto, usar o preço dele
    if (agendamento.produto && agendamento.produto.preco) {
        console.log('Usando preço do produto direto:', agendamento.produto.preco);
        return parseFloat(agendamento.produto.preco);
    }
    
    console.log('Nenhum valor encontrado, retornando 0');
    return 0;
}

