// Remarcar agendamento (apenas data e hora)
function remarcarAgendamento(id) {
    fetch(`/sistema/agendamentos/${id}`)
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                const agendamento = data.data;
                
                // Obter data e hora atuais
                const dataAtual = new Date(agendamento.data_agendamento);
                const dataFormatada = dataAtual.toISOString().split('T')[0];
                const horaFormatada = dataAtual.toTimeString().slice(0, 5);
                
                // Solicitar nova data
                const novaData = prompt(`üìÖ REMARCAR AGENDAMENTO\n\nPaciente: ${agendamento.paciente?.nome}\nData atual: ${dataFormatada}\n\nDigite a nova data (AAAA-MM-DD):`, dataFormatada);
                
                if (!novaData) return;
                
                // Solicitar nova hora
                const novaHora = prompt(`üïê NOVA HORA\n\nData: ${novaData}\nHora atual: ${horaFormatada}\n\nDigite a nova hora (HH:MM):`, horaFormatada);
                
                if (!novaHora) return;
                
                // Validar formato
                if (!/^\d{4}-\d{2}-\d{2}$/.test(novaData)) {
                    alert('‚ùå Formato de data inv√°lido! Use AAAA-MM-DD');
                    return;
                }
                
                if (!/^\d{2}:\d{2}$/.test(novaHora)) {
                    alert('‚ùå Formato de hora inv√°lido! Use HH:MM');
                    return;
                }
                
                const novaDataHora = `${novaData} ${novaHora}:00`;
                
                // Confirmar altera√ß√£o
                const confirmacao = confirm(`‚úÖ CONFIRMAR REMARCA√á√ÉO\n\nDe: ${dataFormatada} ${horaFormatada}\nPara: ${novaData} ${novaHora}\n\nConfirmar altera√ß√£o?`);
                
                if (!confirmacao) return;
                
                // Atualizar no backend
                fetch(`/sistema/agendamentos/${id}`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        data_agendamento: novaDataHora,
                        profissional_id: agendamento.profissional_id
                    })
                })
                .then(response => response.json())
                .then(result => {
                    if (result.success) {
                        alert('‚úÖ Agendamento remarcado com sucesso!');
                        buscarAgendamentos();
                    } else {
                        alert('‚ùå ' + result.message);
                    }
                })
                .catch(error => {
                    console.error('Erro:', error);
                    alert('‚ùå Erro ao remarcar agendamento');
                });
            }
        })
        .catch(error => {
            console.error('Erro:', error);
            alert('‚ùå Erro ao carregar agendamento');
        });
}

// Inicializar filtros com data atual
 function inicializarFiltros() {
     let mesDoAno = new Date().getMonth() + 1;
